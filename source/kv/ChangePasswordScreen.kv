<ChangePasswordScreen>
    name: 'ChangePasswordScreen'

    Column:
        MDTopAppBar:
            id: toolbar
            left_action_items: [['chevron-left', lambda x: app.go_back()]]

    MDLabel:
        text: "Change Password"
        font_size: "25sp"
        pos_hint: {"center_x": .6, "center_y": .85}

    MDFloatLayout:
        size_hint_x: .2
        size_hint_y: .2
        pos_hint: {"center_x": .45, "center_y": .72}
        canvas:
            Color:
                rgb: (1, 1, 1, 1)
            Ellipse:
                size: 240, 240
                pos: self.pos
                source: "source/pic/avatar_test.png"

    MDTextField:
        id: old_password_field
        text: ''
        hint_text: 'Old Password'
        password: True
        font_name: 'myFont'
        font_size: 40
        pos_hint: {"center_x": .7, "center_y": .5}

    MDTextField:
        id: new_password_field
        text: ''
        hint_text: 'New Password'
        password: True
        helper_text: 'Note: At least 8 characters'
        helper_text_mode: "on_focus"
        font_name: 'myFont'
        font_size: 40
        pos_hint: {"center_x": .7, "center_y": .41}

    MDTextField:
        id: re_new_password_field
        text: ''
        hint_text: 'Re-enter New Password'
        password: True
        font_name: 'myFont'
        font_size: 40
        pos_hint: {"center_x": .7, "center_y": .32}

    MDRaisedButton:
        text: "Save"
        md_bg_color: "#42A5F5"
        pos_hint: {"center_x": .5, "center_y": .22}
        size_hint: (0.1, 0.06)
        on_press: root.updatePassword()
