#: import * mandel_layouts
<MD5Card>
    padding: 4
    size_hint: None, None
    size: dp(400), dp(100)
#    padding: 0, 0, 0, "16dp"

    MDRelativeLayout:

        MDIconButton:
            id: root.commentUuid
            icon: "chevron-right"
            pos_hint: {"top": 1, "right": 1}
            on_release: root.reply()

        MDLabel:
            id: commentUserName
            text: root.userName
            adaptive_size: True
            color: "black"
            pos: dp(5), dp(60)
            bold: True
            font_style: 'H6'
            font_size: 35

        MDLabel:
            id: commentContent
            text: root.commentContent
            adaptive_size: True
            color: "grey"
            pos: dp(12), dp(12)
            bold: True
            font_style: 'Body1'
            font_size: 20


<PostScreen>:
    RecycleView:
        scroll_y: 0.5
        Column:
            id: postAndComment
            adaptive_height: True
            spacing: "16dp"
            ### An async image widget contains an image
            ### The image is displayed with specific width and height (300 x 900)
            AsyncImage:
                source: 'source/pic/main_hello.jpg'
                size_hint: None, None
                size: dp(250), dp(250)
                canvas:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        texture: self.texture
                        size: self.width, self.height
                        pos: self.pos
    Column:
        MDTopAppBar:
            id: toolbar
            pos_hint: {'center_x': .5, 'center_y': 0.95}
            left_action_items: [["arrow-left", lambda x: app.go_back()]]