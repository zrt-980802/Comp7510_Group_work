#: import * mandel_layouts
<MD5Card>
#    padding: 4
    size_hint: None, None
    size: dp(360), dp(70)

#    padding: 0, 0, 0, "16dp"

    MDRelativeLayout:
        orientation: "vertical"
        adaptive_height: True
        spacing: "6dp"
        padding: "12dp", 0, 0, 0
        pos_hint: {"center_y": .5}
#        MDIconButton:
#            id: root.commentUuid
#            icon: "chevron-right"
#            pos_hint: {"top": 1, "right": 1}
##            on_release: root.reply()

        MDLabel:
            text: root.commentUserName
            adaptive_size: True
            color: "black"
            pos: dp(5), dp(40)
            bold: True
            font_style: 'H6'
            font_size: 30

        MDLabel:
            text: root.commentContent
            adaptive_size: True
            color: "grey"
            pos: dp(12), dp(12)
            bold: True
            font_style: 'Body1'
            font_size: 15
            # Automatic line wrapping
            text_size: self.width, None
            size_hint: 0.95, None
            height: self.texture_size[1]
<MD4Card>
    padding: 4
    size_hint: None, None
    size: dp(400), dp(100)
#    padding: 0, 0, 0, "16dp"

    MDRelativeLayout:
        orientation: "vertical"
        adaptive_height: True
        spacing: "6dp"
        padding: "12dp", 0, 0, 0
        pos_hint: {"center_y": .5}
#        MDIconButton:
#            id: root.uuid
#            icon: "chevron-right"
#            pos_hint: {"top": 1, "right": 1}
#            on_release: root.jump('postPage',[root.uuid])

        MDLabel:
            text: root.postTitle
            color: "black"
            pos: dp(5), dp(35)
            font_style: 'H6'
            font_size: 35

        MDLabel:
            text: root.postContent
            color: "grey"
            pos: dp(12), dp(0)
            font_style: 'Body1'
            font_size: 20
            # Automatic line wrapping
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]

<PostScreen>:


    RecycleView:
#        scroll_y: 0.5
        pos_hint: {"center_x": .5, "center_y": .4}
        Column:
            id: postAndComment
            adaptive_height: True
            spacing: "16dp"
            halign: 'center'



    Column:
        MDTopAppBar:
            id: toolbar
            pos_hint: {'center_x': .5, 'center_y': 0.95}
            left_action_items: [["arrow-left", lambda x: root.quit()]]

    MDTextField:
        id: replyComment
        hint_text: "Reply"
        helper_text: "No more than 35 letters."
        helper_text_mode: "on_focus"
        pos_hint: {'center_x': .45, 'center_y': 0.05}
        size_hint_x: .8
        max_text_length: 135
        background_color: '#6da0f2'
    MDIconButton:
        icon: 'arrow-top-right'
        pos_hint: {'center_x': .85, 'center_y': 0.05}
        on_release: root.reply()


