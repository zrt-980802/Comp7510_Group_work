#: import * mandel_layouts
<LoginScreen>:
    name: 'LoginScreen'

    canvas.before:
        Color:
            rgba: .2,.2,.5,1
        Rectangle:
            pos: self.pos
            size: self.size
#            source: 'source/pic/login.png'


    Column:
        halign: 'center'
        valign: 'center'
        padding: dp(100)
        spacing: dp(20)

        LoginMDLabel:
            id: label
            text: 'Sign In'
            font_size: dp(40)
            color: 1,1,1,1
            halign: 'center'

        ###Widget:
        SignInTextField:
            id: user_name_field
            hint_text: 'User Name'

        SignInTextField:
            id: password_field
            hint_text: 'Password'
            password: True
            helper_text_mode: "on_focus"

        MDBoxLayout:
            adaptive_height: True
            orientation: 'horizontal'
            Check:
                id: is_remember_for_next_time
                active: False
#                pos_hint: {'center_x': .4, 'center_y': .5}
            LoginMDLabel:
                id: label
                text: 'I agree to the Terms and Conditions and Privacy Policy'
                font_size: dp(10)
                color: '#CFD8DC'
                halign: 'center'

        MDBoxLayout:
            adaptive_height: True
            orientation: 'vertical'#'horizontal'
#            padding: dp(5)
            spacing: dp(20)

            MDRaisedButton:
                text: "Sign in"
                md_bg_color: "#42A5F5"
                pos_hint: {'center_x': 0.5}
                size_hint: (1,0.7)
                on_press: root.login()
            MDBoxLayout:
                adaptive_height: True
                orientation: 'horizontal'
                spacing: dp(10)
                MDRaisedButton:
                    text: "Register"
                    md_bg_color: "#ABB2B9"
                    pos_hint: {'left': 1}
                    size_hint: (1,0.7)
                    on_press: app.show_screen('register')

                MDRaisedButton:
                    text: 'Guest log in'
                    md_bg_color: "#ABB2B9"
                    pos_hint: {'right': 1}
                    size_hint: (1,0.7)
                    on_press: root.guestLogin()








<SignInTextField@MDTextField>
    hint_text_color_normal: 1,1,1,.5
    hint_text_color_focus: 1,1,1,1
    line_color_normal: 1,1,1,.5
    line_color_focus: 1,1,1,1
    text_color_normal: 1,1,1,.7
    text_color_focus: 1,1,1,1
    font_name: 'myFont'

<Check@MDCheckbox>:
    group: 'group'
    size_hint: None, None
    size: dp(48), dp(48)

<LoginMDLabel@MDLabel>
    font_name: 'myFont'