#: import * mandel_layouts
<MD3Card>
    padding: 4
    size_hint: None, None
    size: dp(400), dp(100)
#    padding: 0, 0, 0, "16dp"

    MDRelativeLayout:

        MDIconButton:
            id: root.uuid
            icon: "chevron-right"
            pos_hint: {"top": 1, "right": 1}
            on_release: root.jump2Post(root.uuid)

        ForumMainMDLabel:
            id: title
            text: root.title
            adaptive_size: True
            color: "black"
            pos: dp(5), dp(60)
            bold: True
            font_style: 'H6'
            font_size: 35

        ForumMainMDLabel:
            id: content
            text: root.content
            adaptive_size: True
            color: "grey"
            pos: dp(12), dp(12)
            bold: True
            font_style: 'Body1'
            font_size: 20


<ForumMainScreen>:
    name: 'ForumMainScreen'
    AsyncImage:
        source: 'source/pic/main_hello.jpg'
        size_hint: None, None
        pos_hint: {"center_x": 0.75, "center_y": .8}
        size: dp(200), dp(200)
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                texture: self.texture
                size: self.width, self.height
                pos: self.pos

    ForumMainMDLabel:
        id: greetWord
        text: ''
        font_size: 40
        pos_hint: {"center_x": 0.5, "center_y": .85}

    ForumMainMDLabel:
        id: loginName
        text: ''
        font_size: 35
        pos_hint: {"center_x": 0.58, "center_y": .8}

    RecycleView:
        scroll_y: 0.5
        pos_hint: {"center_x": .5, "center_y": .35}
        size_hint_y: .70
        Column:
            id: listOfPost
            adaptive_height: True
            spacing: "16dp"


    Column:
        MDTopAppBar:
            id: toolbar
            left_action_items: [["menu", lambda x: root.callback(x)]]
            right_action_items:
                [
                ["magnify", lambda x: root.menu_callback('Search'),'Search','Search'],
                ["refresh", lambda x: root.menu_callback('refresh'),'refresh','refresh'],
                ]

<ForumMainMDLabel@MDLabel>
    font_name: 'myFort'
    text_color: 0,0.058,0.101,1