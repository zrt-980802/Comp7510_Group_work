<EditProfileScreen>
    name: 'EditProfileScreen'

    Column:
        MDTopAppBar:
            id: toolbar
            left_action_items: [['chevron-left', lambda x: app.go_back()]]

    MDLabel:
        text: "Edit Profile"
        font_size: "25sp"
        pos_hint: {"center_x": .6, "center_y": .85}

    MDFloatLayout:
        size_hint_x: .2
        size_hint_y: .2
        pos_hint: {"center_x": .5, "center_y": .72}
        canvas:
            Color:
                rgb: (1, 1, 1, 1)
            Ellipse:
                size: 240, 240
                pos: self.pos
                source: "source/pic/avatar_test.png"

    MDTextField:
        id: user_name_field
        text: ''
        hint_text: 'New Username'
        font_name: 'myFont'
        font_size: 40
        pos_hint: {"center_x": .7, "center_y": .5}

    MDTextField:
        id: user_nick_name_field
        text: ''
        hint_text: 'New Nickname'
        font_name: 'myFont'
        font_size: 40
        pos_hint: {"center_x": .7, "center_y": .42}

    MDTextField:
        id: user_phone_number_field
        text: ''
        hint_text: 'New Phone Number'
        font_name: 'myFont'
        font_size: 40
        pos_hint: {"center_x": .7, "center_y": .34}

    MDTextField:
        id: user_email_field
        text: ''
        hint_text: 'New Email'
        font_name: 'myFont'
        font_size: 40
        pos_hint: {"center_x": .7, "center_y": .26}

    MDRaisedButton:
        text: "Save"
        md_bg_color: "#42A5F5"
        pos_hint: {"center_x": .5, "center_y": .16}
        size_hint: (0.1, 0.06)
        on_press: root.updateProfile()
